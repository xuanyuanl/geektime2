.main{
  width: 100%;
  height: 100rpx;
  position: relative;
  display: flex;
  background-color: #ffffff;
}
.img{
  display: inline-block;
  margin: 30rpx;
}
.img image{
  width: 40rpx;
  height: 40rpx;
}
.title{
  margin-left: 10rpx;
  font-size: 14px;
  line-height: 100rpx;
}
.description{
  position: absolute;
  right: 80rpx;
  font-size: 14px;
  line-height: 100rpx;
  color: #bbbbbb;
}
.right{
  position: absolute;
  right: 30rpx;
  top: 40rpx;
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #999999;
  border-right: 2rpx solid #bbbbbb;
  transform: rotate(45deg);
}